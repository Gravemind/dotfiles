    position bottom
    colors {
        background #101010
        statusline #E0E0E0
        separator #666666
        focused_workspace  #285577 #285577 #dddddd
        active_workspace   #282828 #282828 #888888
        inactive_workspace #101010 #101010 #555555
        urgent_workspace   #c02020 #c02020 #ffffff
        binding_mode       #c02020 #c02020 #ffffff
    }
}

